<%= render './shared/navbar' %>

<div class="jumbotron jumbotron-fluid">
  <div class="back">
    <div class="container">
      <h1 class="display-4">My cocktails</h1>
      <p class="lead">Partagez vos meilleures recettes de cocktail !</p>
      <div>
        <%= link_to "Create a new Cocktail", new_cocktail_path, class: "button-banner copper-button" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag(cocktail.photo.key,
          width: 200, crop: :fill, class: "card-img-top") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name.capitalize %></h5>
          <p class="card-text"><%= cocktail.description %>.</p>
          <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


