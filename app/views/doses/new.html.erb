<%= render 'shared/navbar'%>

<div class="jumbotron card card-image" style="background-image: url(https://res.cloudinary.com/droxurcle/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1581700797/jenny-pace-yBz_o25M2zY-unsplash_gu8cpl.jpg);">
  <div class="text-center py-2 px-4">
    <div class = container>
      <h2 class="card-title h1-responsive pt-3 mb-5 font-bold"><strong><%= @cocktail.name %></strong>
      </h2>
      <p class="mx-5 mb-5">Lorem ipsum</p>
      <div class="button-banner pale-button">
        <%= link_to "Delete #{@cocktail.name}",
        cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" } %>

      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <h3>Description</h3>
      <p>
        <%= @cocktail.description %>
      </p>
      <div class="form-group">
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit "Submit dose", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
